<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prescription.PrescriptionActivity">

    <EditText
        android:id="@+id/diagnosed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/edit_border"
        android:text="@string/diagnosed_notFound"
        android:gravity="top"
        android:padding="12dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/prescription"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/edit_border"
        android:text="@string/prescription_notFound"
        android:gravity="top"
        android:padding="12dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/diagnosed"
        app:layout_constraintBottom_toTopOf="@+id/done" />

    <Button
        android:id="@+id/done"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_btn"
        android:textAllCaps="false"
        android:text="Done"
        android:textColor="#FFF"
        android:textSize="11pt"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>