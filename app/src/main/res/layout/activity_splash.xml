<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity"
    android:background="@color/bg_color">

    <ImageView
        android:id="@+id/logo_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_frame"
        app:layout_constraintEnd_toEndOf="@+id/logo_frame"
        app:layout_constraintStart_toStartOf="@+id/logo_frame"
        app:layout_constraintTop_toTopOf="@+id/logo_frame"/>

    <ImageView
        android:id="@+id/pw_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blue_frame"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/pw_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_co"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/pw_frame"
        app:layout_constraintEnd_toEndOf="@+id/pw_frame"
        app:layout_constraintStart_toStartOf="@+id/pw_frame"
        app:layout_constraintTop_toTopOf="@+id/pw_frame"
        />


</androidx.constraintlayout.widget.ConstraintLayout>